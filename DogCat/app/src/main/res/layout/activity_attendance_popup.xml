<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F9F3"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#22741C"
            android:gravity="center"
            android:text="출석 보상"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/layoutDay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/state_border"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="1일차"
                android:textColor="#1D5038"
                android:textColorLink="#FFFFFF" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/dogfoot" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/state_border"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textView02"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="2일차"
                android:textColor="#1D5038" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/catfoot" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/state_border"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textView03"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="3일차"
                android:textColor="#1D5038" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/dogfoot" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDay4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/state_border"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textView04"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="4일차"
                android:textColor="#1D5038" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/catfoot" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDay5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:background="@drawable/state_border"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textView05"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="5일차"
                android:textColor="#1D5038" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/dogfoot" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66dbdbdb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#A0C377"
            android:gravity="center"
            android:padding="10dp"
            android:text="출석하기"
            android:textColor="#fff"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>