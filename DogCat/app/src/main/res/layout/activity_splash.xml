<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1E0"
    tools:context=".SplashActivity">


    <TextView
        android:id="@+id/titleView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:fontFamily="@font/sdsamliphopangcheoutline"
        android:gravity="center|center_horizontal"
        android:text="멍이 냥이"
        android:textColor="#000000"
        android:textSize="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/titleImage2"
        android:layout_width="84dp"
        android:layout_height="0dp"
        android:layout_marginStart="264dp"
        android:layout_marginLeft="264dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="35dp"
        android:rotation="30"
        app:layout_constraintBottom_toBottomOf="@+id/titleView1"
        app:layout_constraintStart_toStartOf="@+id/titleView1"
        app:layout_constraintTop_toTopOf="@+id/titleImage1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/catfoot" />

    <ImageView
        android:id="@+id/titleImage1"
        android:layout_width="68dp"
        android:layout_height="75dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="75dp"
        android:rotation="8"
        app:layout_constraintBottom_toBottomOf="@+id/titleView1"
        app:layout_constraintEnd_toStartOf="@+id/titleImage2"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toStartOf="@+id/titleImage2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dogfoot" />


</androidx.constraintlayout.widget.ConstraintLayout>